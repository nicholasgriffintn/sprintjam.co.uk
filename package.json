{
  "name": "sprintjam-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @sprintjam/app dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint:monorepo": "sherif",
    "lint": "pnpm lint:monorepo && turbo lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo test",
    "deploy": "turbo deploy",
    "deploy:staging": "turbo run deploy:staging --filter=\"...[HEAD^]\"",
    "deploy:prod": "turbo run deploy:prod --filter=\"...[HEAD^]\"",
    "deploy:prod:all": "turbo run deploy:prod",
    "db:generate": "pnpm --filter @sprintjam/auth-worker db:generate",
    "db:migrate:local": "pnpm --filter @sprintjam/auth-worker db:migrate:local",
    "db:migrate:staging": "pnpm --filter @sprintjam/auth-worker db:migrate:staging",
    "db:migrate:prod": "pnpm --filter @sprintjam/auth-worker db:migrate:prod"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "prettier": "3.7.4",
    "sherif": "1.9.0",
    "turbo": "2.7.3",
    "typescript": "5.9.3",
    "wrangler": "4.59.2"
  },
  "packageManager": "pnpm@10.27.0"
}
