{
  "name": "sprintjam-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @sprintjam/dispatch-worker dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint:monorepo": "sheriff",
    "lint": "pnpm lint:monorepo && turbo lint",
    "format": "prettier --write .",
    "test": "turbo test",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "PLAYWRIGHT_RUN_SMOKE=1 pnpm test:e2e",
    "test:e2e:smoke:staging": "PLAYWRIGHT_RUN_SMOKE=1 PLAYWRIGHT_BASE_URL=https://staging.sprintjam.co.uk pnpm test:e2e",
    "test:e2e:smoke:production": "PLAYWRIGHT_RUN_SMOKE=1 PLAYWRIGHT_BASE_URL=https://sprintjam.co.uk pnpm test:e2e",
    "deploy": "turbo deploy",
    "deploy:staging": "pnpm --filter @sprintjam/auth-worker deploy:staging && pnpm --filter @sprintjam/room-worker deploy:staging && pnpm --filter @sprintjam/dispatch-worker build:staging && pnpm --filter @sprintjam/dispatch-worker deploy:staging",
    "deploy:prod": "pnpm --filter @sprintjam/auth-worker deploy:prod && pnpm --filter @sprintjam/room-worker deploy:prod && pnpm --filter @sprintjam/dispatch-worker build && pnpm --filter @sprintjam/dispatch-worker deploy:prod",
    "db:migrate:staging": "pnpm --filter @sprintjam/auth-worker db:migrate:staging",
    "db:migrate:prod": "pnpm --filter @sprintjam/auth-worker db:migrate:prod"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "prettier": "3.7.4",
    "sheriff": "^0.0.2",
    "turbo": "2.7.2",
    "typescript": "5.9.3",
    "wrangler": "4.53.0"
  },
  "packageManager": "pnpm@10.27.0"
}
